  <script>
    const camInput = document.getElementById('camInput');
    camInput.onchange = () => {
      document.getElementById('statusText').innerHTML = "<span style='font-size: 28px;'>‚úÖ</span> PHOTO ENREGISTR√âE";
      document.getElementById('dropZone').style.borderColor = "#27ae60";
      document.getElementById('statusText').style.color = "#27ae60";
    };

    document.getElementById('presenceForm').onsubmit = async (e) => {
      e.preventDefault();
      const btn = document.getElementById('sub');
      btn.innerText = "ENVOI EN COURS...";
      btn.disabled = true;

      const formData = new FormData(e.target);
      const file = camInput.files[0];
      const reader = new FileReader();

      reader.readAsDataURL(file);
      reader.onload = async () => {
        const base64Image = reader.result.split(',')[1];
        const payload = Object.fromEntries(formData.entries());
        payload.signature = base64Image;

        try {
          // COLLE TON URL DE D√âPLOIEMENT CI-DESSOUS
          await fetch('https://script.google.com/macros/s/AKfycbzO83UAjEgbW4eYDuNocqJ5LKQ9IWPfd8mIt6El_9on2mXHgqi1oHt4_Z4QCG_MKGslyw/exec', {
            method: 'POST',
            mode: 'no-cors', // Important pour Google Script
            body: JSON.stringify(payload)
          });

          alert("Pointage valid√© avec succ√®s !");
          location.reload();
        } catch (error) {
          alert("Erreur d'envoi.");
          btn.innerText = "VALIDER LE POINTAGE";
          btn.disabled = false;
        }
      };
    };
  </script>
